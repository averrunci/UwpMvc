<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/ApplicationHostStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <DataTemplate x:Key="ApplicationHostTemplate">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Style="{StaticResource HeaderGridStyle}">
                <TextBlock x:Uid="ApplicationTitle"
                           Style="{StaticResource TitleStyle}"/>
            </Grid>

            <ContentControl Grid.Row="1" Content="{Binding Content}"/>

            <Grid Grid.Row="2" Style="{StaticResource FooterGridStyle}">
                <TextBlock x:Uid="Copyright"
                           Style="{StaticResource CopyrightStyle}"/>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
